        }

        .select-container {
            border: 2px solid #e0e7ff;
            border-radius: 16px;
            padding: 0;
            margin-bottom: 24px;
            cursor: pointer;
            position: relative;
            overflow: hidden;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .select-container:hover {
            border-color: #c7d2fe;
        }

        .select-container h2 {
            font-size: 14px;
            color: #6b7280;
            margin: 0;
            padding: 16px 20px 0;
        }

        .dropdown-header {
            padding: 8px 20px 16px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid transparent;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .dropdown-header.active {
            border-bottom-color: #e0e7ff;
        }

        .dropdown-header .price {
            font-size: 20px;
            font-weight: 500;
            color: #1a1f36;
        }

        .chevron {
            width: 20px;
            height: 20px;
            transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .chevron.active {
            transform: rotate(180deg);
        }

        .select-options {
            max-height: 0;
            opacity: 0;
            overflow: hidden;
            background: white;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .select-options.active {
            max-height: 200px;
            opacity: 1;
        }

        .select-item {
            margin: 0;
