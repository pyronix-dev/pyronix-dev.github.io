<body>
    <div class="payment-container">
        <h1>Pyronix</h1>
        <div class="select-container">
            <h2>Select an item</h2>
            <div class="dropdown-header">
                <span>Monthly - 45,95 USD</span>
                <svg class="chevron" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M6 9l6 6 6-6" />
                </svg>
            </div>
            <div class="select-options">
                <div class="select-item selected" data-price="45.95" data-type="monthly">
                    <span>Monthly - 45,95 USD</span>
                    <svg class="check-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                        stroke-width="2">
                        <path d="M20 6L9 17l-5-5" />
                    </svg>
                </div>
                <div class="select-item" data-price="459.95" data-type="yearly">
                    <span>Yearly - 459,95 USD</span>
                    <svg class="check-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                        stroke-width="2">
                        <path d="M20 6L9 17l-5-5" />
                    </svg>
                </div>
            </div>
        </div>

        <div class="total">
            <span>Total</span>
            <span id="total-price">45.95 USD</span>
        </div>

        <div id="paypal-button-container"></div>

        <div class="disclaimer">
            By clicking Pay button, you agree to our Terms of Service and Privacy Policy.
        </div>
    </div>

    <!-- PayPal SDK -->
    <script
        src="https://www.paypal.com/sdk/js?client-id=AaX0q5hvdrlbISpP0I91ZFKzW1DIYK_00T4u-eYTlW-fzFOeOEzofd_UkTSh2o2V3TaZa7nvIJNyP0Nr&currency=USD"></script>

    <script>
        const WORKER_URL = 'https://ppcrossoriginrelayhandler.rzotime.workers.dev';
        let totalPrice = 45.95; // Initial price
        let priceType = 'monthly'; // Default price type

        // Dropdown functionality
        const dropdown = document.querySelector('.dropdown-header');
        const options = document.querySelector('.select-options');
        const chevron = document.querySelector('.chevron');
        const items = document.querySelectorAll('.select-item');

        dropdown.addEventListener('click', (e) => {
            e.stopPropagation();
            options.classList.toggle('active');
            chevron.classList.toggle('active');
            dropdown.classList.toggle('active');
        });

        items.forEach(item => {
            item.addEventListener('click', (e) => {
                e.stopPropagation();

                // Add ripple effect
                const ripple = document.createElement('div');
                ripple.classList.add('ripple');

                // Update selected state with animation
                items.forEach(i => {
                    i.classList.remove('selected');
                    i.style.transition = 'all 0.3s cubic-bezier(0.4, 0, 0.2, 1)';
                });

                item.classList.add('selected');

                // Update dropdown header text with fade effect
                const headerText = dropdown.querySelector('span');
                headerText.style.opacity = '0';
                setTimeout(() => {
                    headerText.textContent = item.querySelector('span').textContent;
                    headerText.style.opacity = '1';
                }, 150);

                // Close dropdown with delay for smooth animation
                setTimeout(() => {
                    options.classList.remove('active');
                    chevron.classList.remove('active');
                    dropdown.classList.remove('active');
                }, 200);

                // Update total price with animation
                const totalElement = document.getElementById('total-price');
                totalElement.style.opacity = '0';
                totalElement.style.transform = 'translateY(5px)';

                setTimeout(() => {
                    totalPrice = parseFloat(item.dataset.price);
                    priceType = item.dataset.type; // Get the type (monthly or yearly)
                    totalElement.textContent = `${totalPrice.toFixed(2)} USD`;
                    totalElement.style.opacity = '1';
                    totalElement.style.transform = 'translateY(0)';
                }, 150);
            });
        });

        // Close dropdown when clicking outside
        document.addEventListener('click', () => {
            if (options.classList.contains('active')) {
                options.classList.remove('active');
                chevron.classList.remove('active');
                dropdown.classList.remove('active');
            }
        });

        // PayPal integration
        paypal.Buttons({
            style: {
                layout: 'vertical',
                color: 'black',
                shape: 'pill',
                label: 'paypal',
                borderRadius: 15
            },
            createOrder: async () => {
                try {
                    const response = await fetch(`${WORKER_URL}/api/create-paypal-order`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ priceType }) // Send the selected price type
                    });

                    if (!response.ok) {
                        throw new Error('Failed to create order');
                    }

                    const order = await response.json();
                    return order.id;
                } catch (error) {
                    console.error('Error:', error);
                    throw error;
                }
            },
            onApprove: async (data) => {
                try {
                    const response = await fetch(`${WORKER_URL}/api/capture-paypal-order`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            orderId: data.orderID
                        })
                    });

                    if (!response.ok) {
                        throw new Error('Failed to capture order');
                    }

                    const captureData = await response.json();
                    console.log('Payment successful:', captureData);

                    // Redirect to thank you page with order ID
                    window.location.href = `https://pyronix-dev.github.io/?orderID=${data.orderID}`;
                } catch (error) {
                    console.error('Error:', error);
                    alert('Payment failed. Please try again.');
                }
            }
        }).render('#paypal-button-container');
    </script>
</body>

</html>
